        "parameters": [
          {
            "name": "companyCode",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "tags": [
          "Company"
        ],
        "parameters": [
          {
            "name": "companyCode",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
